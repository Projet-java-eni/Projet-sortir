{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <h1>
        {{ user.userIdentifier }}
        {% if 'ROLE_ADMIN' in user.roles %}
            ⚔
        {%  endif %}
    </h1>

    {% if user.profilePicture is defined and user.profilePicture is not null %}
    <img class="photo-profil" src="{{ asset(photos_path ~ user.profilePicture.chemindd) }}"  alt="photo de profil" />
    {% endif %}

    <table class="table table-dark">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Nom de famille</th>
                <td>{{ user.familyName }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ user.telephone }}</td>
            </tr>
            <tr>
                <th>Campus</th>
                <td>{{ user.campus }}</td>
            </tr>
            <tr>
                <th>Est actif</th>
                <td>{{ user.isActive ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
    <h2>Sorties participées</h2>
    <table class="table table-dark">
        <tr>
            <th>Nom</th>
            <th>Status</th>
        </tr>
        {% for sortie in user.sortiesParticipees %}
        <tr>
            <td>
                <a href="{{ path('sorties_detail', {'id': sortie.id}) }}"> {{ sortie.nom }}</a>
            </td>
            <td>
                {% if sortie.estAVenir %}
                - Est à venir
                {% endif %}
                {% if sortie.estEnCours %}
                - En cours
                {% endif %}
                {% if sortie.estFinie %}
                - Finie
                {% endif %}
                {% if sortie.isCancelled %}
                - Annulée
                {% endif %}
            </td>
        </tr>
        {% endfor %}
    </table>
    <p>
    <a href="{{ path('user_index') }}" class="btn btn-success">Retour</a>
    </p>
    {% if is_granted('ROLE_ADMIN') or app.user.id == user.id %}
        <p>
    <a href="{{ path('user_edit', {'id': user.id}) }}"  class="btn btn-primary">Modifier</a></p>
    {% endif %}

    {% if is_granted('ROLE_ADMIN') %}
    {{ include('user/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
