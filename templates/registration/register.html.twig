{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <h1>S'inscrire</h1>

    {{ form_start(registrationForm) }}

        {{ form_row(registrationForm.username, {label: 'Pseudo/Adresse e-mail'}) }}

        {{ form_row(registrationForm.plainPassword, {label: 'Mot de passe'}) }}

        {{ form_row(registrationForm.campus, {label: 'Campus'}) }}

        {{ form_row(registrationForm.agreeTerms, {label: 'J\'accepte les conditions d\'utilisation' }) }}

        <button type="submit" class="btn btn-success">S'inscrire</button>

    {{ form_end(registrationForm) }}

{% endblock %}