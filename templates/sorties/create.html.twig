{% extends 'base.html.twig' %}

{% block title %}
    Proposer une nouvelle sortie | {{ parent() }}
{% endblock %}

{% block body %}
    <h1>Ajouter une sortie </h1>

    <section class="sortie-create">
    {{ form_start(sortieForm) }}


        {{ form_row(sortieForm.nom) }}
        {{ form_row(sortieForm.theme) }}
        {{ form_row(sortieForm.date_debut) }}
        {{ form_row(sortieForm.heure_debut) }}
        {{ form_row(sortieForm.date_fin) }}
        {{ form_row(sortieForm.heure_fin) }}
        {{ form_row(sortieForm.duree) }}
        {{ form_row(sortieForm.date_cloture) }}
        {{ form_row(sortieForm.limite_participants) }}
        {{ form_row(sortieForm.infos_sortie) }}
        {{ form_row(sortieForm.campus) }}
        {{ form_row(sortieForm.lieu) }}
        <p>
        <a class="btn btn-warning" href="{{ path('lieu_new') }}" >Ajouter un lieu</a>
        </p>
        {{ form_rest(sortieForm) }}

        <p>
    <button type="submit" class="btn btn-primary">Enregistrer</button>
        </p><p>
        <button type="submit" class="btn btn-success">Publier la sortie</button>
        </p>
        <button type="submit" class="btn btn-danger">Annuler</button>

    {{ form_end(sortieForm) }}

    </section>

{% endblock %}