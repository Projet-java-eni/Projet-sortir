{% extends 'base.html.twig' %}

{% block title %}Photo index{% endblock %}

{% block body %}
    <h1>Photos</h1>

    <table class="table table-dark">
        <thead>
            <tr>
                <th>Id</th>
                <th>Apercu</th>
                <th>Chemin_dd</th>
                <th>IsProfilePicture</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for photo in photos %}
            <tr>
                <td>{{ photo.id }}</td>
                <td><img src="{{ asset(photos_path ~ photo.chemindd) }}"  alt="photo" width="20" height="20"/></td>
                <td>{{ photo.cheminDd }}</td>
                <td>{{ photo.isProfilePicture ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('crud_photo_show', {'id': photo.id}) }}">voir</a>
                    <a href="{{ path('crud_photo_edit', {'id': photo.id}) }}">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('crud_photo_new') }}">Ajouter une photo</a>
{% endblock %}
