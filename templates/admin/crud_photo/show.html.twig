{% extends 'base.html.twig' %}

{% block title %}Photo détails{% endblock %}

{% block body %}
    <h1>Photo - détails</h1>
    {% if photo.chemindd is defined %}
        <img src="{{ asset(photos_path ~ photo.chemindd) }}"  alt="photo" />
    {% endif %}


    <table class="table table-dark">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ photo.id }}</td>
            </tr>
            <tr>
                <th>Chemin_dd</th>
                <td>{{ photo.cheminDd }}</td>
            </tr>
            <tr>
                <th>IsProfilePicture</th>
                <td>{{ photo.isProfilePicture ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
    <p>
    <a class="btn btn-success" href="{{ path('crud_photo_index') }}">Retour</a>
    </p><p>
    <a class="btn btn-primary" href="{{ path('crud_photo_edit', {'id': photo.id}) }}">Modifier</a>
    </p>
    {{ include('admin/crud_photo/_delete_form.html.twig') }}
{% endblock %}
